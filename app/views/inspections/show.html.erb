
<%= render template: "notice" %>

<div class="pull-right">
  <%= link_to "Imprimir", '#', class:"btn btn-default hidden-print", onclick: "printpage()" %>
</div>
<hr>
<div class="container-fluid">
  <div class="pull-right">
    <strong>Fecha:</strong>
    <%= @inspection.date %>
  </div>

  <p>
    <strong>Estudio:</strong>
    <%= @inspection.study_of_name %>
  </p>

  <p>
    <u><strong>Datos del paciente</strong></u>
    <p>
      <div class="pull-right">
        <strong>Edad </strong><%= age(@patient.birthdate)%>
      </div>
      <strong>Apellido y nombre</strong><t>
      <%= @patient.lastname %> <%= @patient.firstname %>
      <br>
      <strong>Documento</strong>
      <%= @patient.type_document_cd %> <%= @patient.document_number %>
      <br>
      <strong>Obra Social</strong>
      <% if (@patient.obra_social_type.nil? || @patient.obra_social_number.nil?)  %>
        [Sin Obra Social]
      <% else %>
        <%= @patient.obra_social_type %> <%= @patient.obra_social_number %>
      <% end %>
    </p>
  </p>
</div>
<hr>
<div class="container-fluid">
  <p>
    <strong>Motivo de consulta:</strong>
    <%= @inspection.reason %>
  </p>

  <p>
    <strong>Tipo de Estudio:</strong>
    <%=@inspection.study_of_type %>
  </p>

  <p>
    <strong>Informe:</strong>
    <%= @inspection.report %>
  </p>

  <p>
    <strong>Conclusión:</strong>
    <%= @inspection.conclusion %>
  </p>

  <p>
    <strong>Diagnostic:</strong>
    <%= @inspection.diagnostic %>
  </p>
</div>
<hr>

<% @images.each do |image| %>
      <div class="pull-right">
      <%= link_to 'Eliminar', inspection_image_path(@inspection.id, image.id),
      class:"btn btn-sm btn-danger hidden-print",
        method: :delete%>
      </div>
      <div class="text-center">
      <%= image_tag serve_inspection_image_path(@inspection.id, image.id),
          style: "max-width:350px;max-height:350px"%>
      </div>
      <br>
<% end %>
<br>
<div class="hidden-print">
  <%= form_for([@inspection, @inspection.images.build]) do |f| %>
    <div class="field">
      <%= f.label :"Imagenes" %><br>
      <%= f.file_field :data, multiple: true, class: "form-control"%>
    </div>
    <%= f.hidden_field :name, :value => %Q{#{@patient.lastname}_#{@patient.firstname}_#{Time.new.strftime("%d/%m/%Y-%H:%Hhs}")}}%>
    <div class="actions form-group">
      <%= f.submit class:"btn btn-primary", value: "Guardar"%>
    </div>
  <% end %>
  <hr>
  <div class="pull-left">
    <%= link_to 'Editar', edit_inspection_path(@inspection), class: "btn btn-sm btn-info"  %>
    <%= link_to 'Eliminar', inspection_path, class:"btn btn-sm btn-danger",
                method: :delete, data: { confirm: '¿Estás seguro?' } %>
  </div>
  <div class="pull-right">
    <%= link_to 'Volver', patient_inspections_path(@patient), class: "btn btn-sm btn-default" %>
  </div>
</div>
