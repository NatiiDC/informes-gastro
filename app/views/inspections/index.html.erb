<p id="notice"><%= notice %></p>

<h1>Listing Inspections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Date</th>
      <th>Reason</th>
      <th>Report</th>
      <th>Conclusion</th>
      <th>Diagnostic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inspections.each do |inspection| %>
      <tr>
        <td><%= inspection.name %></td>
        <td><%= inspection.type %></td>
        <td><%= inspection.date %></td>
        <td><%= inspection.reason %></td>
        <td><%= inspection.report %></td>
        <td><%= inspection.conclusion %></td>
        <td><%= inspection.diagnostic %></td>
        <td><%= link_to 'Show', inspection %></td>
        <td><%= link_to 'Edit', edit_inspection_path(inspection) %></td>
        <td><%= link_to 'Destroy', inspection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

