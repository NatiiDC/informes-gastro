<p id="notice"><%= notice %></p>
<legend class="text-center">
  <h2> Listado de informes del paciente <%=link_to %Q{#{@patient.firstname} #{@patient.lastname}}, patient_path(@patient) %>
  </h2>
</legend>

<table class="table table-hover table-bordered table-condensed text-center">
  <thead>
    <tr>
      <th class="text-center" ><strong><%= t 'activerecord.attributes.inspection.study_of_name'%></strong></th>
      <th class="text-center" ><strong><%= t 'activerecord.attributes.inspection.study_of_type'%></strong></th>
      <th class="text-center" ><strong><%= t 'activerecord.attributes.inspection.date'%></strong></th>
      <th class="text-center" ><strong><%= t 'activerecord.attributes.inspection.reason'%></strong></th>
      <th class="text-center" ><strong><%= t 'activerecord.attributes.inspection.conclusion'%></strong></th>
      <th class="text-center" >Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @inspections.each do |inspection| %>
      <tr>
        <td><%= inspection.study_of_name %></td>
        <td><%= inspection.study_of_type %></td>
        <td><%= inspection.date.strftime("%d-%m-%Y") %></td>
        <td><%= inspection.reason %></td>
        <td><%= inspection.conclusion %></td>
        <td>
          <%= link_to 'Ver', inspection, class:"btn btn-xs btn-info"  %>
          <%= link_to 'Editar', edit_inspection_path(inspection), class:"btn btn-xs btn-info"  %>
          <%= link_to 'Eliminar', inspection, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
